{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "moduleResolution": "node16",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declarationDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/__tests__/**/*", "**/__mocks__/**/*"],
  "references": [
    {
      "path": "../core"
    }
  ]
}
