{
  "name": "gt-react-native",
  "version": "0.0.10-alpha.0",
  "description": "An i18n package for React Native",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/module/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/module/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./plugin": {
      "source": "./src/plugin.ts",
      "types": "./lib/typescript/module/plugin-dir/index.d.ts",
      "require": "./lib/commonjs/plugin.js",
      "import": "./lib/module/plugin.js",
      "default": "./lib/commonjs/plugin.js"
    },
    "./internal": {
      "source": "./src/internal.ts",
      "types": "./lib/typescript/module/internal.d.ts",
      "default": "./lib/module/internal.js"
    }
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "package.json",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "pnpm --filter gt-react-native-example",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "pnpm clean && pnpm prepare && pnpm publish --tag latest",
    "release:alpha": "pnpm clean && pnpm prepare && pnpm publish --tag alpha"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/generaltranslation/gt-react-native.git"
  },
  "author": "General Translation, Inc. <support@generaltranslation.com> (https://generaltranslation.com)",
  "license": "FSL-1.1-ALv2",
  "bugs": {
    "url": "https://github.com/generaltranslation/gt-react-native/issues"
  },
  "homepage": "https://github.com/generaltranslation/gt-react-native#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/types": "^7.28.4",
    "@types/babel__core": "^7.20.5",
    "@types/node": "^22.10.2",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@evilmartians/lefthook": "^1.12.3",
    "@react-native-community/cli": "20.0.1",
    "@react-native/babel-preset": "0.81.1",
    "@react-native/eslint-config": "^0.81.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/react": "^19.1.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "react": "19.1.0",
    "react-native": "0.81.1",
    "react-native-builder-bob": "^0.40.13",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@formatjs/intl-datetimeformat": "^6.18.2",
    "@formatjs/intl-displaynames": "^6.8.13",
    "@formatjs/intl-getcanonicallocales": "^2.5.6",
    "@formatjs/intl-listformat": "^7.7.13",
    "@formatjs/intl-locale": "^4.2.13",
    "@formatjs/intl-numberformat": "^8.15.6",
    "@formatjs/intl-pluralrules": "^5.4.6",
    "@formatjs/intl-relativetimeformat": "^11.4.13",
    "@generaltranslation/react-core": "workspace:*",
    "@generaltranslation/supported-locales": "workspace:*",
    "generaltranslation": "workspace:*"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs"
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "GtReactNativeSpec",
    "type": "modules",
    "jsSrcsDir": "./src",
    "android": {
      "javaPackageName": "com.gtreactnative"
    }
  },
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.54.5"
  },
  "workspaces": [
    "example"
  ]
}
