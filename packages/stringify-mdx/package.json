{
  "name": "gt-stringify-mdx",
  "version": "0.1.0",
  "description": "Remark plugin for safely stringifying MDX/Markdown by escaping HTML-sensitive characters in text nodes.",
  "keywords": [
    "remark",
    "remark-stringify",
    "unified",
    "mdast",
    "markdown",
    "plugin",
    "html",
    "escape",
    "mdx"
  ],
  "main": "./dist/index.cjs.min.cjs",
  "module": "./dist/index.esm.min.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:clean": "rm -rf dist && npm run build",
    "build:release": "npm run build:clean",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs.min.cjs",
      "import": "./dist/index.esm.min.mjs",
      "default": "./dist/index.esm.min.mjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/generaltranslation/gt.git"
  },
  "author": "General Translation, Inc.",
  "license": "FSL-1.1-ALv2",
  "bugs": {
    "url": "https://github.com/generaltranslation/gt/issues"
  },
  "homepage": "https://generaltranslation.com/",
  "dependencies": {
    "mdast-util-find-and-replace": "^3.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/mdast": "^4.0.4",
    "rollup": "^4.32.1",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  }
}
