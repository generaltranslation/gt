{
  "compilerOptions": {
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": false,
    "stripInternal": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "generaltranslation": ["dist/index.d.ts"],
      "generaltranslation/internal": ["dist/internal.d.ts"]
    },
    "lib": ["ES2023"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
