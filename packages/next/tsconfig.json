{
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "paths": {
      "generaltranslation/*": ["../core/src/*"],
      "gt-react/*": ["../react/src/*"],
      "@generaltranslation/supported-locales/*": ["../supported-locales/src/*"]
    }
  },
  "include": ["src/**/*", "src/.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../react"
    },
    {
      "path": "../supported-locales"
    }
  ]
}
