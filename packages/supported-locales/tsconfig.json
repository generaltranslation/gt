{
  "compilerOptions": {
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": false,
    "stripInternal": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "composite": true,
    "lib": ["ES2023"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [
    {
      "path": "../core"
    }
  ]
}
