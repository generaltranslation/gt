{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "composite": true,
    "paths": {
      "generaltranslation/*": ["../core/src/*"],
      "@generaltranslation/supported-locales/*": ["../supported-locales/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../supported-locales"
    }
  ]
}
