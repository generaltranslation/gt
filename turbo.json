{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "transpile": {
      "dependsOn": ["^transpile"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "cache": false
    },
    "test": {
      "dependsOn": ["lint"],
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "build:clean": {
      "dependsOn": ["^build:clean"],
      "outputs": ["dist/**"]
    }
  }
}