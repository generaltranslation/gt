{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": ["dist/**"]
    },
    "transpile": {
      "dependsOn": ["^transpile"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "test": {
      "cache": false,
      "env": ["VITE_CI_TEST_GT_PROJECT_ID", "VITE_CI_TEST_GT_API_KEY"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "build:clean": {
      "dependsOn": ["^build:clean"],
      "cache": false,
      "outputs": ["dist/**"]
    },
    "build:turbopack": {
      "dependsOn": ["^build:turbopack"],
      "cache": true,
      "outputs": ["dist/**"]
    },
    "build:release": {
      "dependsOn": ["^build:release"],
      "cache": true,
      "outputs": ["dist/**"],
      "env": ["SENTRY_ORG", "SENTRY_PROJECT", "SENTRY_AUTH_TOKEN"]
    },
    "release": {
      "dependsOn": ["^release"],
      "cache": false,
      "outputs": ["dist/**"]
    },
    "release:alpha": {
      "dependsOn": ["^release:alpha"],
      "cache": false,
      "outputs": ["dist/**"]
    },
    "release:beta": {
      "dependsOn": ["^release:beta"],
      "cache": false,
      "outputs": ["dist/**"]
    },
    "bench": {
      "cache": false
    }
  }
}
